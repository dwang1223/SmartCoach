<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.wpi.smartcoachdb"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.wpi.smartcoachdb.ui.ProfileActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="edu.wpi.smartcoach.ShowProfileActivity"
            android:label="@string/title_activity_show_profile" >
        </activity>
        <activity
            android:name="edu.wpi.smartcoachdb.ui.RegistrationActivity"
            android:label="@string/title_activity_registration" >
        </activity>
        <activity
            android:name="edu.wpi.smartcoachdb.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="edu.wpi.smartcoachdb.ui.PatientInfoActivity"
            android:label="@string/title_activity_patient_info" >
        </activity>
    </application>

</manifest>

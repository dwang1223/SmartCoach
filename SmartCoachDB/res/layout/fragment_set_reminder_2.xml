<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/bg_card"
    android:orientation="vertical" >

    <TimePicker
        android:id="@+id/numSolutions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="horizontal" >

            <ToggleButton
                android:id="@+id/sun"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:textOff="SUN"
                android:textOn="SUN"
                android:textSize="12sp" />

            <ToggleButton
                android:id="@+id/mon"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:textOff="MON"
                android:textOn="MON"
                android:textSize="12sp" />

            <ToggleButton
                android:id="@+id/tue"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:textOff="TUE"
                android:textOn="TUE"
                android:textSize="12sp" />

            <ToggleButton
                android:id="@+id/wed"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:textOff="WED"
                android:textOn="WED"
                android:textSize="12sp" />

            <ToggleButton
                android:id="@+id/thu"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:textOff="THU"
                android:textOn="THU"
                android:textSize="12sp" />

            <ToggleButton
                android:id="@+id/fri"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:textOff="FRI"
                android:textOn="FRI"
                android:textSize="12sp" />

            <ToggleButton
                android:id="@+id/sat"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:textOff="SAT"
                android:textOn="SAT"
                android:textSize="12sp" />
        </LinearLayout>

    </HorizontalScrollView>

    </LinearLayout>


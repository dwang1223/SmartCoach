<?xml version="1.0" encoding="utf-8"?>
<questions>
	
    <question 
        id="profile_exercise_location"
        type="multiple" 
        title="Location">
        <q>Where would you prefer to exercise?</q>
        <option id="home">At Home</option>
        <option id="gym">In the gym</option>
        <option id="outdoor">Outdoors</option>
        <option id="any" default="true">It doesn't matter</option>
    </question>
    
    <question 
        id="profile_exercise_who"
        type="multiple" 
        title="Social">
        <q>With whom do you prefer to exercise?</q>
        <option id="alone">Alone</option>
        <option id="friend">With a friend</option>
        <option id="group">With a group</option>
        <option id="any" default="true">It doesn't matter</option>
    </question>
    
    <question 
        id="profile_exercise_when"
        type="multiple" 
        title="Time"
        options="TIMES">
        <q>When do you prefer to exercise?</q>
    </question>
    
    <question
        id="profile_exercise_enjoy"
        type="multiple"
        title="Favorites"
        options="EXERCISES">
        <q>Which exercises have you tried and liked?</q>
    </question>

        <question
        id="profile_exercise_hate"
        type="multiple"
        title="Least Favorites"
        options="EXERCISES">
        <q>Which exercises have you tried and not liked?</q> 
    </question>
    
    <question
        id="profile_exercise_equip"
        type="multiple"
        title="Equipment"
        options="EQUIPMENT">
        <q>Please check all that you own:</q>
    </question>
        
</questions>
